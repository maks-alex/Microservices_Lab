@page
@model MultiApp.Pages.CreateModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h4>Add Joke</h4>
<hr />
<div class="row  justify-content-center">

    <div class="col-md-6">
        <form method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Joke.Name" class="control-label"></label>
                <input asp-for="Joke.Name" class="form-control" />
                <span asp-validation-for="Joke.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Joke.Text" class="control-label"></label>
                <input asp-for="Joke.Text" class="form-control" />
                <span asp-validation-for="Joke.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Joke.Category" class="control-label"></label>
                <input asp-for="Joke.Category" class="form-control" />
                <span asp-validation-for="Joke.Category" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Add Joke" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to Jokes</a>
</div>
